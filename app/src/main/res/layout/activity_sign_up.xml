<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15sp"
    android:orientation="vertical"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/login_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Log in"
            android:textColor="@color/colorPrimary"
            android:fontFamily="Bold"
            android:textSize="15sp"
            android:onClick="loginRegister"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track your University Activity"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#d65028"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get expert teacher from the resource, routine, course activity via email, our apps, and website."
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/edtEmailAddressLog"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:hint="  Email Address :"/>
    <EditText
        android:id="@+id/edtPasswordLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="  Password :"/>
    <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Full Name:"
        android:inputType="textPersonName"/>
    <EditText
        android:inputType="textPersonName"
        android:id="@+id/edtIdNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  University Id No."/>
    <EditText
        android:inputType="textPersonName"
        android:id="@+id/edtDepartmentname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Department"/>




    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Receive all notice and activity from university"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:background="#28185b"
        android:textColor="#fff"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        android:onClick="onClickRegister"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy | Terms"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"/>

</LinearLayout>